

  const float offset = -10.0f;
  
  Vector3 cameraForward = finalRotation * Vector3::ZAXIS;
  cameraForward.Normalize();

  auto newPosition = highlightPos + cameraForward * offset;    

  DALI_LOG_RELEASE_INFO("AdjustHighlightOrientation: newPosition (%.2f, %.2f, %.2f)\n",
                        newPosition.x, newPosition.y, newPosition.z);
  highlight.SetProperty(Actor::Property::POSITION, newPosition);

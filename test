
void AdjustHighlightOrientation(Actor& highlight, const Vector3& camPos) {  
  //highlight.SetProperty(Actor::Property::ORIENTATION, Quaternion());  

  Actor parent = highlight.GetParent();  
  if (parent) {  
    auto orientationValue = parent.GetProperty(Actor::Property::ORIENTATION);  
    Quaternion parentRotation;  
    if (orientationValue.Get(parentRotation)) {  
      parentRotation.Invert();  
    }  
    //highlight.SetProperty(Actor::Property::ORIENTATION, parentRotation);  
  }  
  //Dali::DevelActor::LookAt(parent2, camPos);  
}

DBus::ValueOrError<std::vector<BridgeAccessible::Relation>> BridgeAccessible::GetRelationSet()
{
  auto self = FindSelf();
  std::vector<BridgeAccessible::Relation> relations;

  if(!self)
  {
    return relations;
  }

  auto relationList = self->GetRelationSet(); // returns std::vector<Accessibility::Relation>

  for(const auto& r : relationList)
  {
    std::vector<Dali::WeakHandle<Dali::Actor>> actorHandles;

    for(const auto& handle : r.mTargets)
    {
      if(auto actor = handle.GetHandle())
      {
        actorHandles.push_back(handle); // 그대로 push (이미 WeakHandle<Actor>)
      }
    }

    relations.emplace_back(static_cast<uint32_t>(r.mRelationType), std::move(actorHandles));
  }

  return relations;
}
